<Window x:Class="Checkers.GameModeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Game Mode" Height="200" Width="300" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select Game Mode:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <RadioButton x:Name="SinglePlayerRadio" Content="Single Player (vs. Computer)" 
                     GroupName="GameMode" IsChecked="True" Margin="0,5"/>
            <RadioButton x:Name="TwoPlayerRadio" Content="Two Player (vs. Another Human)" 
                     GroupName="GameMode" Margin="0,5"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="StartButton" Content="Start Game" Width="80" Height="30" Click="StartButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" Margin="10,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
